<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"
    android:stretchColumns="*">

    <TableRow
        android:id="@+id/tableRow1"
        android:background="@color/FIRST_FTC"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_height="23dp"
            android:layout_width="100dp"
            android:text="@string/allianceText"
            android:textAppearance="@android:style/TextAppearance"
            android:textStyle="bold" />

        <RadioGroup
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/buttonRed"
                android:layout_height="23dp"
                android:layout_width="100dp"
                android:onClick="onAllianceClicked"
                android:text="@string/redText" />

            <RadioButton
                android:id="@+id/buttonBlue"
                android:layout_height="23dp"
                android:layout_width="100dp"
                android:onClick="onAllianceClicked"
                android:text="@string/blueText" />
        </RadioGroup>
    </TableRow>
    <TableRow
        android:id="@+id/tableRow2"
        android:background="@color/FIRST_FTC"
        android:gravity="left"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <CheckBox
            android:id="@+id/checkSkyStone"
            android:layout_height="23dp"
            android:layout_width="50dp"
            android:onClick="onSkyStoneClicked"
            android:text="@string/skystoneText" />

        <CheckBox
            android:id="@+id/checkFoundation"
            android:layout_height="23dp"
            android:layout_width="50dp"
            android:onClick="onFoundationClicked"
            android:text="@string/foundationText" />

        <CheckBox
            android:id="@+id/checkPark"
            android:layout_height="23dp"
            android:layout_width="50dp"
            android:onClick="onParkClicked"
            android:text="@string/parkText" />
    </TableRow>
</TableLayout>